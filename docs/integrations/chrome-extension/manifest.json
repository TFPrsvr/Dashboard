{
  "manifest_version": 3,
  "name": "PassItOn Donation Helper",
  "version": "1.0.0",
  "description": "Easily add donation widgets to any website and track your fundraising impact with PassItOn.",
  
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  
  "host_permissions": [
    "https://api.passiton.com/*",
    "https://dashboard.passiton.com/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "PassItOn Donation Helper",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": [
        "widget/*",
        "images/*",
        "inject.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://api.passiton.com https://dashboard.passiton.com"
  },
  
  "options_page": "options.html",
  
  "commands": {
    "add_donation_widget": {
      "suggested_key": {
        "default": "Ctrl+Shift+D",
        "mac": "Command+Shift+D"
      },
      "description": "Add donation widget to current page"
    },
    "open_dashboard": {
      "suggested_key": {
        "default": "Ctrl+Shift+P",
        "mac": "Command+Shift+P"
      },
      "description": "Open PassItOn dashboard"
    }
  },
  
  "externally_connectable": {
    "matches": [
      "https://dashboard.passiton.com/*",
      "https://widget.passiton.com/*"
    ]
  }
}